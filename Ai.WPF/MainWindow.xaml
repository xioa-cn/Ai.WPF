<Window
    x:Class="Ai.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:Ai.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ai.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="650"
    Background="White"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <!--  资源和转换器  -->
    <Window.Resources>
        <convert:BoolToColorConverter x:Key="BoolToColorConverter" />
        <convert:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter" />
        <convert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  顶部标题栏  -->
        <Border
            Grid.Row="0"
            Padding="15"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="Medium"
                Text="和Deepseek的对话" />
        </Border>

        <!--  对话历史显示区域  -->
        <ScrollViewer
            x:Name="ChatScrollViewer"
            Grid.Row="1"
            Margin="0,0,0,10"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ChatHistoryList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10,5"
                            Padding="10"
                            HorizontalAlignment="{Binding IsUser, Converter={StaticResource BoolToAlignmentConverter}}"
                            Background="{Binding IsUser, Converter={StaticResource BoolToColorConverter}}"
                            CornerRadius="8">
                            <StackPanel>
                                <!--  图片显示区域  -->
                                <Image
                                    MaxWidth="300"
                                    MaxHeight="200"
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Left"
                                    Source="{Binding Image}"
                                    Stretch="Uniform"
                                    Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibilityConverter}}" />

                                <!--  文本显示区域  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        Grid.Column="0"
                                        MaxWidth="350"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="IBeam"
                                        Foreground="Black"
                                        IsReadOnly="True"
                                        IsUndoEnabled="False"
                                        SelectionBrush="#4285F4"
                                        Text="{Binding Message, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto" />
                                    <Button
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        Padding="3,1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="CopyButton_Click"
                                        Content="复制"
                                        Tag="{Binding Message}"
                                        Visibility="Collapsed">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  中间按钮区域  -->
        <Button
            Grid.Row="2"
            Margin="0,5,0,15"
            Padding="15,8"
            HorizontalAlignment="Center"
            Background="#F0F2F5"
            BorderThickness="0"
            Click="NewChatButton_Click"
            Content="开启新对话"
            Foreground="#1E88E5">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20" />
                </Style>
            </Button.Resources>
            <Button.ContentTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="⟳" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>

        <!--  底部输入区域  -->
        <Border
            Grid.Row="3"
            Padding="15"
            Background="#F7F7F7"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  输入框  -->
                <Border
                    Grid.Row="0"
                    Padding="10"
                    AllowDrop="True"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    DragOver="InputBox_DragOver"
                    Drop="InputBox_Drop">
                    <StackPanel Margin="5">
                        <TextBox
                            x:Name="UserInputTextBox"
                            MinHeight="50"
                            MaxHeight="120"
                            Margin="5"
                            Padding="10"
                            VerticalContentAlignment="Center"
                            AcceptsReturn="True"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            PreviewKeyDown="UserInputTextBox_PreviewKeyDown"
                            TextWrapping="Wrap" />

                        <!--  图片预览区域  -->
                        <Border
                            x:Name="ImagePreviewBorder"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="#F5F5F5"
                            CornerRadius="4"
                            Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Image
                                    x:Name="ImagePreview"
                                    Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    Margin="5"
                                    Stretch="Uniform" />
                                <TextBlock
                                    x:Name="ImageNameText"
                                    Grid.Column="1"
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    TextTrimming="CharacterEllipsis" />
                                <Button
                                    Grid.Column="2"
                                    Margin="5"
                                    Padding="5,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="RemoveImage_Click"
                                    Content="×" />
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!--  底部工具栏  -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  左侧功能按钮  -->
                    <!--<StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Padding="8,5"
                            Background="Transparent"
                            BorderThickness="0">
                            <TextBlock Foreground="#4285F4" Text="深度思考 (R1)" />
                        </Button>
                        <Button
                            Margin="5,0"
                            Padding="8,5"
                            Background="Transparent"
                            BorderThickness="0">
                            <TextBlock Foreground="#4285F4" Text="联网搜索" />
                        </Button>
                    </StackPanel>-->

                    <!--  右侧发送按钮  -->
                    <Button
                        x:Name="SendButton"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="#4285F4"
                        BorderThickness="0"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20" />
                            </Style>
                        </Button.Resources>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="↑" />
                    </Button>
                </Grid>
            </Grid>
        </Border>


    </Grid>


</Window>
